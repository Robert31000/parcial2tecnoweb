# ============================================
# CONFIGURACIÓN DE PAGOFACIL QR
# ============================================
# URL base de la API de PagoFacil
PAGOFACIL_BASE_URL=https://masterqr.pagofacil.com.bo/api/services/v2

# Tokens de autenticación (proporcionados por PagoFacil)
PAGOFACIL_TOKEN_SERVICE=tu_token_service_aqui
PAGOFACIL_TOKEN_SECRET=tu_token_secret_aqui

# Código de cliente (identificador interno)
PAGOFACIL_CLIENT_CODE=LAVANDERIA_BELEN

# URLs DE CALLBACK Y RETORNO - ¡IMPORTANTE!
# ==========================================
# PARA DESARROLLO LOCAL:
# PAGOFACIL_CALLBACK_URL=http://localhost:8000/payment/callback
# PAGOFACIL_RETURN_URL=http://localhost:8000/ordenes

# PARA PRODUCCIÓN EN DIGITALOCEAN APP PLATFORM:
# PAGOFACIL_CALLBACK_URL=https://tu-app.ondigitalocean.app/payment/callback
# PAGOFACIL_RETURN_URL=https://tu-app.ondigitalocean.app/ordenes

# PARA PRODUCCIÓN EN SERVIDOR TECNOWEB:
# PAGOFACIL_CALLBACK_URL=https://www.tecnoweb.org.bo/inf513/grupoXX/lavanderia/payment/callback
# PAGOFACIL_RETURN_URL=https://www.tecnoweb.org.bo/inf513/grupoXX/lavanderia/ordenes

# Configuración actual (cambiar según el entorno):
PAGOFACIL_CALLBACK_URL=http://localhost:8000/payment/callback
PAGOFACIL_RETURN_URL=http://localhost:8000/ordenes

# Monto de prueba para QR (en bolivianos)
# Este es el monto que se cobrará en el QR (0.10 Bs)
# pero se registrará el monto real de la orden en la BD
PAGOFACIL_TEST_AMOUNT=0.10
